/* rewrite post-meta tags */
.post-meta .hover-with-bg
  background-color #eee
  border-radius 3px 0 0 3px
  height 26px
  padding 0 20px 0 23px
  position relative
  cursor pointer
  transition .2s

  &:hover
    color #fff
    background-color #2F4154

    &::after
      border-left 10px solid #2F4154

  &::after
    position absolute
    right 0
    top 0
    background #fff
    border-bottom 13px solid transparent
    border-left 10px solid #eee
    border-top 13px solid transparent
    transition .2s
    content ""

  &::before
    position absolute
    left 10px
    top 10px
    background #fff
    border-radius 50%
    box-shadow inset 0 1px rgba(0,0,0,.25)
    content ""
    height 6px
    width 6px

.markdown-body
  a
    color #1abc9c

    &:not([href*="royce2003.top"])[href*="http"]::after
      font-family "iconfont"
      content "\e681"
      color #aaa
      font-size 10px
      position relative
      bottom 2px
      left 2px

    &[href*=".gif"]
    &[href*=".png"]
    &[href*=".jpg"]
    &[href*=".jpeg"]
    &[href*=".webp"]
      &::after
        display none

  h1, h2, h3, h4, h5, h6, span
    a::after
      display none
  
  mark
