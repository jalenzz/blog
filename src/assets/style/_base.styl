// Default
*
  box-sizing border-box
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  background-color var(--bg-color)
  color var(--body-color)
  transition color 0.6s, background-color 0.6s
  font-family var(--base-font-family)
  margin 0
  padding 0
  line-height 1.5

  ::selection
    background-color var(--selection-color)

a:not(.button)
  color var(--main-color)
  transition 0.2s

  &:hover
    opacity 0.8

img
  max-width 100%

table
  display block
  width 100%
  overflow auto
  margin-bottom 1.25em

  tr
    border-top 1px solid #c6cbd1

  td, th
    padding 6px 13px
    border 1px solid #dfe2e5

  th
    font-weight 600
    background-color var(--bg-code)

sup
  position relative
  top -0.3em
  vertical-align top
  color var(--main-color)
  margin 0 0.2em

  &::before
    content '['

  &::after
    content ']'

@font-face
  font-family 'iconfont'
  src url('//at.alicdn.com/t/font_2048511_zlbbf8ayzn.eot')
  src url('//at.alicdn.com/t/font_2048511_zlbbf8ayzn.eot?#iefix') format('embedded-opentype'), url('//at.alicdn.com/t/font_2048511_zlbbf8ayzn.woff2') format('woff2'), url('//at.alicdn.com/t/font_2048511_zlbbf8ayzn.woff') format('woff'), url('//at.alicdn.com/t/font_2048511_zlbbf8ayzn.ttf') format('truetype'), url('//at.alicdn.com/t/font_2048511_zlbbf8ayzn.svg#iconfont') format('svg')

.content-box a[target='_blank']::after
  font-family 'iconfont'
  content '\e681'
  color #aaa
  font-size 12px
  margin 0 5px 0
  vertical-align middle

hr
  text-align center
  border none
  margin calc((var(--space) / 2)) 0

  &:before
    content '...'
    letter-spacing 0.6em
    font-size 1.2em

::-webkit-scrollbar
  width 0.49rem
  height 0.36rem

  &-thumb
    background rgba(0, 0, 0, 0.3)
